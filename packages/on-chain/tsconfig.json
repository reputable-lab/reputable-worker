{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,

    // JavaScript support
    "allowJs": false,
    "checkJs": false,
    "jsx": "react"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
